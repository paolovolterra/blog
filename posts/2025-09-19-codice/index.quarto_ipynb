        "import matplotlib.pyplot as plt\n",
        "import pandas as pd\n",
        "\n",
        "# dati fittizi\n",
        "data = pd.DataFrame({\n",
        "    \"Mese\": [\"Gen\", \"Feb\", \"Mar\", \"Apr\"],\n",
        "    \"Valore\": [10, 15, 7, 12]\n",
        "})\n",
        "\n",
        "plt.plot(data[\"Mese\"], data[\"Valore\"], marker=\"o\")\n",
        "plt.title(\"Valori di esempio\")\n",
        "plt.xlabel(\"Mese\")\n",
        "plt.ylabel(\"Valore\")\n",
        "plt.grid(True)\n",
        "plt.show()"
